<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_akhi"
        android:textSize="25sp"
        android:id="@+id/textViewId">


    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here !"
        android:drawableBottom="@drawable/ic_arrow"
        android:drawableLeft="@drawable/ic_arrow"
        android:drawableRight="@drawable/ic_arrow"
        android:drawableTop="@drawable/ic_arrow"
        android:drawableTint="@android:color/holo_red_dark"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:id="@+id/buttonId">

    </Button>

    <EditText
        android:layout_width="300dp"
        android:layout_marginTop="100dp"
        android:hint="Enter Your Name"
        android:id="@+id/editTextId"

        android:layout_height="wrap_content">

    </EditText>

    <Button
        android:textAllCaps="false"
        android:id="@+id/loginButtonId"
        android:textSize="25dp"
        android:text="Login"

        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>

    <ImageView
        android:id="@+id/imageViewId"
        android:src="@drawable/gallery"
        android:layout_width="200dp"
        android:layout_height="200dp">

    </ImageView>

    <Button
        android:text="Change Image"
        android:id="@+id/imageButtonId"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_purple"
        android:drawableRight="@drawable/ic_change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>
    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"

        android:layout_height="wrap_content">

    </Button>
</LinearLayout>